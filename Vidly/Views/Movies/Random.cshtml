@*@ model has to lower case *@
@model Vidly.ViewModels.RandomModelViewModel

@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*render model and specify the directive on top *@
@*which specify which model to refer *@
@*after adding the model on top we should be able to see properties of specified model*@

@{ 
    var className = Model.Customers.Count > 5 ? "popular" : null;
}

<h2 class="@className">@Model.Movie.Name</h2>
@if(Model.Customers.Count == 0)
{
    <text> No one has rented this movie before! </text>
}
else
{
<ul>
    @foreach (var customer in Model.Customers)
    {
        <li>
            @customer.Name
        </li>
    }
</ul>
}

